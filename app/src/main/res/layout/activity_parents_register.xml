<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center" >
        <FrameLayout
            android:id="@+id/username_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <EditText
                android:id="@+id/username_new"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="用户名"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/user"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/userpassword_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/password_new"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="密码"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/password" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/email_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userpassword_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="邮箱"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/email" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mobile_phone_num_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/mobile_phone_num"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="手机号"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/child_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobile_phone_num_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/child_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="孩子姓名"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/child_age_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_name_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/child_age"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="孩子年龄"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/child_sex_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_age_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/child_sex"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="孩子性别"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/parents_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_sex_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/parents_name"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="家长姓名"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/parents_contact_information_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parents_name_layout"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <EditText
                android:id="@+id/parents_contact_information"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:paddingRight="60dp"
                android:maxLength="20"
                android:hint="联系方式"
                android:paddingLeft="55dp" >
            </EditText>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/mobilephone" />
        </FrameLayout>

        <Button
            android:id="@+id/register_submit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/parents_contact_information_layout"
            android:layout_marginTop="10dp"
            android:background="#1B9FD8"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="提交" />
    </RelativeLayout>

</RelativeLayout>
